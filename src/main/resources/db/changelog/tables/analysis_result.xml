<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="bodnar">
        <createTable tableName="analysis_result">
            <!-- Creatable entity -->
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <!-- Updatabale entity -->
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>

            <!-- Entity -->
            <column name="analysis_job_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="dependency_graph_path" type="text"/>
            <column name="dependency_graph_data" type="text"/>
            <column name="suggested_microservices_json" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
