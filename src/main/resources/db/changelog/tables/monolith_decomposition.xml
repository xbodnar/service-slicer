<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-monolith-decomposition-table" author="Norbert Bodnar">
        <createTable tableName="monolith_decomposition">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="algorithm" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="modularity_score" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="monolith_decomposition" indexName="idx_suggestion_analysis_job_id">
            <column name="project_id"/>
        </createIndex>

        <createIndex tableName="monolith_decomposition" indexName="idx_suggestion_algorithm">
            <column name="algorithm"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-service-boundary-table" author="Norbert Bodnar">
        <createTable tableName="service_boundary">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="monolith_decomposition_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="suggested_name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="cohesion" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="coupling" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="internal_dependencies" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="external_dependencies" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="type_names" type="jsonb">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="service_boundary"
                baseColumnNames="monolith_decomposition_id"
                constraintName="fk_service_boundary_decomposition"
                referencedTableName="monolith_decomposition"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="service_boundary" indexName="idx_boundary_decomposition_id">
            <column name="monolith_decomposition_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
