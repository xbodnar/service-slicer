<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="bodnar">
        <createTable tableName="project_source">
            <!-- Creatable entity -->
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>

            <!-- Entity -->
            <column name="source_type" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="dtype" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="project_root_relative_path" type="text"/>
            <column name="project_root_path" type="text"/>

            <!-- GitHubProjectSource -->
            <column name="repository_git_uri" type="text"/>
            <column name="branch_name" type="text"/>

            <!-- ZipFileProjectSource -->
            <column name="zip_file_path" type="text"/>

            <!-- JarProjectSource -->
            <column name="jar_file_path" type="text"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
