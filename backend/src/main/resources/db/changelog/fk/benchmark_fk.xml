<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-fks" author="Norbert Bodnar">
        <addForeignKeyConstraint
                baseTableName="benchmark"
                baseColumnNames="baseline_sut_id"
                constraintName="fk_benchmark_baseline_sut"
                referencedTableName="system_under_test"
                referencedColumnNames="id"/>
        <addForeignKeyConstraint
                baseTableName="benchmark"
                baseColumnNames="target_sut_id"
                constraintName="fk_benchmark_target_sut"
                referencedTableName="system_under_test"
                referencedColumnNames="id"/>
    </changeSet>
    <changeSet id="create-operational-setting-fk" author="Norbert Bodnar">
        <addForeignKeyConstraint
                baseTableName="benchmark"
                baseColumnNames="operational_setting_id"
                constraintName="fk_benchmark_operational_setting"
                referencedTableName="operational_setting"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
