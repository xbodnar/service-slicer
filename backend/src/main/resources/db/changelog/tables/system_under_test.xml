<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-system-under-test-table" author="Norbert Bodnar">
        <createTable tableName="system_under_test">
            <!-- Updatable entity -->
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>

            <!-- Entity -->
            <column name="experiment_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="compose_file_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="jar_file_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex indexName="idx_system_under_test_experiment_id" tableName="system_under_test">
            <column name="experiment_id"/>
        </createIndex>

        <createIndex indexName="idx_system_under_test_compose_file_id" tableName="system_under_test">
            <column name="compose_file_id"/>
        </createIndex>

        <createIndex indexName="idx_system_under_test_jar_file_id" tableName="system_under_test">
            <column name="jar_file_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="add-health-check-and-port-fields-to-system-under-test" author="Norbert Bodnar">
        <addColumn tableName="system_under_test">
            <column name="health_check_path" type="varchar(255)" defaultValue="/actuator/health">
                <constraints nullable="false"/>
            </column>
            <column name="app_port" type="int" defaultValue="9090">
                <constraints nullable="false"/>
            </column>
            <column name="startup_timeout_seconds" type="bigint" defaultValue="180">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="add-sql-seed-file" author="Norbert Bodnar">
        <addColumn tableName="system_under_test">
            <column name="sql_seed_file_id" type="uuid">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
