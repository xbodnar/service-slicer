<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-tables" author="Norbert Bodnar">
        <!-- Create architecture_test_suite table -->
        <createTable tableName="architecture_test_suite">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="benchmark_run_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="target_sut_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="scalability_footprint" type="jsonb">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="architecture_test_suite" indexName="idx_architecture_test_suite_benchmark_run_id">
            <column name="benchmark_run_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
