<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-tables" author="Norbert Bodnar">
        <createTable tableName="target_test_case">
            <!-- Updatable entity -->
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>

            <!-- TestCase -->
            <column name="load" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="start_timestamp" type="timestamptz">
                <constraints nullable="true"/>
            </column>
            <column name="end_timestamp" type="timestamptz">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="k6_output" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="json_summary" type="jsonb">
                <constraints nullable="true"/>
            </column>

            <!-- TargetTestCase -->
            <column name="benchmark_run_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="target_sut_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="load_frequency" type="numeric">
                <constraints nullable="false"/>
            </column>
            <column name="operation_metrics" type="jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="relative_domain_metric" type="numeric">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
