<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-api-operation-table" author="Norbert Bodnar">
        <createTable tableName="api_operation">
            <!-- Updatable entity -->
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>

            <!-- Entity -->
            <column name="open_api_file_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="operation_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="method" type="varchar(16)">
                <constraints nullable="false"/>
            </column>
            <column name="path" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="request_body" type="jsonb">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex indexName="idx_api_operation_open_api_file_id" tableName="api_operation">
            <column name="open_api_file_id"/>
        </createIndex>

        <createIndex indexName="idx_api_operation_operation_id" tableName="api_operation">
            <column name="operation_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="add-unique-key" author="Norbert Bodnar">
        <addUniqueConstraint tableName="api_operation" columnNames="open_api_file_id, method, path"/>
    </changeSet>

    <changeSet id="add-parameters-and-responses-columns" author="Norbert Bodnar">
        <addColumn tableName="api_operation">
            <column name="parameters" type="jsonb" defaultValueComputed="'[]'::jsonb">
                <constraints nullable="false"/>
            </column>
            <column name="responses" type="jsonb" defaultValueComputed="'{}'::jsonb">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
