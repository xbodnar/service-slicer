<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-load-test-run-table" author="Norbert Bodnar">
        <createTable tableName="load_test_run">
            <!-- Creatable entity -->
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="int">
                <constraints nullable="false"/>
            </column>

            <!-- Entity -->
            <column name="experiment_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="system_under_test_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="target_vus" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="start" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="end" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="operation_measurements" type="jsonb">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_load_test_run_experiment_id" tableName="load_test_run">
            <column name="experiment_id"/>
        </createIndex>

        <createIndex indexName="idx_load_test_run_system_under_test_id" tableName="load_test_run">
            <column name="system_under_test_id"/>
        </createIndex>
    </changeSet>
    <changeSet id="rename-timestamp-columns" author="Norbert Bodnar">
        <renameColumn tableName="load_test_run" oldColumnName="start" newColumnName="start_timestamp"/>
        <renameColumn tableName="load_test_run" oldColumnName="end" newColumnName="end_timestamp"/>
    </changeSet>
    <changeSet id="rename-table" author="Norbert Bodnar">
        <renameTable oldTableName="load_test_run" newTableName="sut_load_test_run"/>
    </changeSet>
</databaseChangeLog>
